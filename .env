# Global environment configuration for local_docker
# Moved from stacks/.env so a single file drives all compose stacks and helper scripts.

# WordPress database credentials
WP_DB_NAME=wordpress
WP_DB_USER=wpuser
WP_DB_PASSWORD=wpuser_pass
WP_DB_ROOT_PASSWORD=wproot_pass
MYSQL_ROOT_PASSWORD=${WP_DB_ROOT_PASSWORD}
MARIADB_ROOT_PASSWORD=${WP_DB_ROOT_PASSWORD}

# Primary WordPress domain (multisite base)
WP_DOMAIN=bandyforbundet.localhost
WP_TITLE="Local Multisite"
WP_ADMIN_USER=admin
WP_ADMIN_PASSWORD=change_me
WP_ADMIN_EMAIL=admin@example.test

# Autonomi node configuration
AUTONOMI_WALLET_ADDRESS=0xYOUR_ETH_ADDRESS
AUTONOMI_NODE_COUNT=1
AUTONOMI_PORT_START=61000

# Optional plugin/theme bootstrap (space separated slugs)
#EXTRA_PLUGINS="akismet"
#EXTRA_THEMES="twentytwentythree"
